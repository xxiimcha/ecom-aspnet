                    </div>
                </div>
            </div>

            <div class="table-card">
                <div class="header admin-transactions-spacing labels">
                    <p>Payment ID</p>
                    <p>Product Method</p>
                    <p>Date</p>
                    <p>Amount</p>
                </div>

                <!-- Transactions List -->
                <div class="body">
                    <!-- Sample Transactions -->
                    @for (int i = 0; i < 15; i++) {
                        <TransactionsCard />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

