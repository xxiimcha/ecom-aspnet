@code {
    [Parameter]
    public required string CurrentPage { get; set; }
    public string Location => $"/{CurrentPage.ToLower()}";

    List<string> links = new List<string>() {
        "Home", "Categories", "Products", "Favorites", "Orders"
    };

    public string GetLink(string location) {
        string link = $"/{location.ToLower()}";

        return link;
    }

    public void GoTo(string location) {
        Navigation.NavigateTo($"/{location}");
    }

    public void Logout() {
        Navigation.NavigateTo("/sign-in");
    }
}
